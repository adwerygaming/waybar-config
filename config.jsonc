{
    "layer": "top", 
    "output": "eDP-1",
    "position": "top",
    "modules-left": ["hyprland/workspaces", "custom/window"],
    "modules-center": ["clock"],
    "modules-right": ["group/hardware", "network", "bluetooth","pulseaudio", "custom/kbd", "backlight", "battery", "tray"],

    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "format": "{name} {icon}",
        "format-icons": {
            "active": "ÔëÑ",
            "default": "",
            "urgent": "*"
        }
    },

    "group/hardware": {
		"orientation": "horizontal",
		"modules": [
			"cpu",
			"memory",
			"disk"
		]
	},

    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },

    "custom/idle-inhibitor": {
        "format": "{}",
        "exec": "~/.config/waybar/modules/toggle-idle.sh",
        "on-click": "~/.config/waybar/modules/toggle-idle.sh",
        "signal": 8,
        "tooltip": true
    },

    "tray": {
        "icon-size": 21,
        "spacing": 1
    },

    "clock": {
        "timezone": "Asia/Jakarta",
        "format": "{:%a, %d %b %C%y ÔëÑ‚ÄÇ %r}",
        "format-alt": "{:%H:%M %Z}",
        "tooltip": true,
        "tooltip-format": "{calendar}\n\nÔâ¥ ‚ÄÇ{:%A, %d/%m/%Y}",
        "interval": 1,
        "calendar": {
            "mode": "month",
            "mode-mon-col": 3,
            "on-scroll": 1,
            "format": {
                "months": "<span color='#ffead3'><b>{}</b></span>",
                "days": "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
                "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
                "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        },
        "actions": {
            "on-click-right": "mode",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },
    "cpu": {
        "interval": 1,
        "format": "Ôãõ ‚ÄÇ{usage}%",
        "tooltip": true,
        "tooltip-format": "CPU: {usage}% | {avg_frequency}Ghz"
    },

    "memory": {
        "interval": 1,
        "format": "ÓøÖ ‚ÄÇ{}%",
        "tooltip": true,
        "tooltip-format": "Memory: {}% | {used} GiB"
    },

    "disk": {
        "path": "/",
        "interval": 1,
        "format": "ÔÉá‚ÄÇ{}%",
        "tooltip": true,
        "tooltip-format": "Disk (/): {}% | {percentage_used}% used, {used} out of {total}"
    },

    "backlight": {
        "scroll-step": 5,
        "// device": "acpi_video1",
        "format": "{icon} ‚ÄÇ{percent}%",
        "tooltip": true,
        "tooltip-format": "Brightness: {percent}%",
        "format-icons": ["ÔÜÖ", "ÔÑë"]
    },

    "battery": {
        "format": "{icon} ‚ÄÇ {capacity}% {time}",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
        "format-time": "- {H}h{M}m left",
        "format-charging": "ÔÉß {capacity}% - {time} till full",
        "format-full": "ÔÉß {icon}",
        "interval": 5,
        "states": {
            "warning": 25,
            "critical": 10
        },
        "tooltip": true,
        "on-click": "2"
    },

    "network": {
        "interval": 5,
        "format": "Ôá´",
        "tooltip": true,
        "tooltip-format": "{ifname} / {ipaddr}/{cidr}",
        "tooltip-format-ethernet": "Û∞àÄ‚ÄÇConnected to Ethernet.\n{ifname} / {ipaddr}/{cidr}",
        "tooltip-format-wifi": "Ôá´ ‚ÄÇConnected to Wifi.\n{ifname} / {ipaddr}/{cidr} - {essid} ({signalStrength}%)",
        "format-wifi": "Ôá´  ‚ÄÇ{essid} ({frequency})",
        "format-ethernet": "Û∞àÄ‚ÄÇ{ipaddr}  Ó≠Æ {bandwidthDownBytes} Ó≠± {bandwidthUpBytes}",
        "format-linked": "Û∞àÄ ‚ÄÇNo IP",
        "format-disconnected": "Not Connected :(",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },

    "pulseaudio": {
        "tooltip": true,
        "scroll-step": 5,
        "format": "{icon} ‚ÄÇ{volume}%",
        "tooltip-format": "{icon} ‚ÄÇ{volume}% {format_source}",
        "format-bluetooth": "Ôäî {volume}% {format_source}",
        "format-bluetooth-muted": "Ôö©",
        "format-muted": "Ôäî",
        "format-source": "ÔÑ∞ {volume}%",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click-right": "pavucontrol",
        "on-click-middle": "pactl set-source-mute @DEFAULT_SOURCE@ toggle",
        "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle"
    },

    "bluetooth": {
        "format": "{icon}",
        "format-disabled": "", 
        "format-connected": "Ôäî ‚ÄÇ{device_alias}",
        "format-on": "Ôäî",
        "format-off": "",
        "interval": 30,
        "tooltip": true,
        "tooltip-format": "Connected to {device_alias}",
        "format-icons": {
            "enabled": "Ôäî",
            "disabled": ""
        },
        "tooltip-format-on": "Bluetooth is {status}",
        "on-click": "blueman-manager"
    },

    "custom/window": {
        "exec": "/home/masdepan/.config/waybar/modules/active_window.sh",
        "interval": 1,
        "format": "{text}",
        "max-length": 67,
        "tooltip": true,
        "rewrite": {
            "(.*) - Mozilla Firefox": "üåé $1",
            "(.*) - Visual Studio Code": "üêû $1"
        }
    },
    "custom/idle_state": {
        "exec": "/home/masdepan/.config/waybar/modules/get_idle_state.sh",
        "interval": 1,
        "return-type": "json",
        "format": "{icon} ‚ÄÇ {text}",
        "format-icons": {
            "idle": "Û∞í≤",
            "active": "Û∞àÜ"
        },
        "max-length": 67,
        "tooltip": true
    }
}
